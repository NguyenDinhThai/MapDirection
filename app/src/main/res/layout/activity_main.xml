<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <fragment
       android:id="@+id/map"
       android:name="com.google.android.gms.maps.SupportMapFragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
   <ImageButton
       android:layout_marginTop="10dp"
       android:id="@+id/img_location"
       android:background="@drawable/ic_my_location"
       android:layout_alignParentRight="true"
       android:layout_width="40dp"
       android:layout_height="40dp" />
   <ImageButton
       android:onClick="onClick"
       android:background="@drawable/ic_restaurant_black"
       android:layout_marginTop="10dp"
       android:layout_below="@id/img_location"
       android:layout_alignParentRight="true"
       android:id="@+id/img_nearby"
       android:layout_width="40dp"
       android:layout_height="40dp" />
   <ImageButton
       android:background="@drawable/ic_directions_run"
       android:id="@+id/img_direc"
       android:layout_below="@id/img_nearby"
       android:layout_width="40dp"
       android:layout_height="40dp" />

</RelativeLayout>